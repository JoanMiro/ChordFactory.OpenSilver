<Page
    x:Class="ChordFactory.OpenSilver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChordFactory.OpenSilver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="DarkSlateGray"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="TitleLabel" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="32" />
                <Setter Property="Foreground" Value="PaleGoldenRod" />
            </Style.Setters>
        </Style>
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="Orange" />
            </Style.Setters>
        </Style>
    </Page.Resources>
    <Page.Content>
        <Grid
            x:Name="LayoutRoot"
            Margin="30"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.Children>
                <StackPanel Orientation="Vertical">
                    <StackPanel.Children>
                        <TextBlock Style="{StaticResource TitleLabel}" Text="Openfeature ChordFactory" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.Children>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderLabel}" Text="Chords" />
                                <ComboBox Grid.Row="1" Grid.Column="0" SelectedIndex="0" HorizontalAlignment="Left" ItemsSource="{Binding Chords}" DisplayMemberPath="Description" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderLabel}" Text="Scales" />
                                <ComboBox Grid.Row="1" Grid.Column="1" SelectedIndex="0" HorizontalAlignment="Left" ItemsSource="{Binding Scales}" DisplayMemberPath="Description" />
                            </Grid.Children>
                        </Grid>
                    </StackPanel.Children>
                </StackPanel>
            </Grid.Children>
        </Grid>
    </Page.Content>
</Page>
