                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ChordCSharpKey"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Background="Black"
                                            Canvas.ZIndex="10"
