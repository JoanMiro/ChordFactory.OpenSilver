<Page
    x:Class="ChordFactory.OpenSilver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="DarkSlateGray"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="TitleLabel" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="32" />
                <Setter Property="Foreground" Value="PaleGoldenRod" />
                <Setter Property="Margin" Value="0,0,0,20" />
            </Style.Setters>
        </Style>
        <Style x:Key="SelectedItemLabel" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Foreground" Value="Orange" />
            </Style.Setters>
        </Style>
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="Orange" />
            </Style.Setters>
        </Style>
        <Style x:Key="PianoKeyStyle" TargetType="Border">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value="2" />
            </Style.Setters>
        </Style>
        <Style x:Key="ComboTestStyle" TargetType="ComboBox">
            <Style.Setters>
                <Setter Property="FontSize" Value="20" />
            </Style.Setters>
        </Style>
    </Page.Resources>
    <Page.Content>
        <Grid
            x:Name="LayoutRoot"
            Margin="30"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Children>
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource TitleLabel}"
                    Text="Openfeature ChordFactory" />
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.Children>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.Children>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource HeaderLabel}"
                                    Text="Chords" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,30,0"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource HeaderLabel}"
                                    Text="Inversion" />
                            </Grid.Children>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.Children>
                                <ComboBox
                                    x:Name="ChordsComboBox"
                                    Grid.Column="0"
                                    Margin="0,10"
                                    HorizontalAlignment="Left"
                                    DisplayMemberPath="Description"
                                    ItemsSource="{Binding Chords}"
                                    SelectedIndex="0" />
                                <ComboBox
                                    x:Name="InversionCombo"
                                    Grid.Column="1"
                                    Margin="0,10,30,10"
                                    HorizontalAlignment="Right"
                                    ItemsSource="{Binding Inversions}"
                                    SelectedIndex="0" />
                            </Grid.Children>
                        </Grid>
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{StaticResource SelectedItemLabel}">
                            <TextBlock.Inlines>
                                <Run Text="Current Chord" />
                                <LineBreak />
                                <Run
                                    x:Name="SelectedChordLabel"
                                    FontStyle="Italic"
                                    Foreground="Yellow" />
                            </TextBlock.Inlines>
                        </TextBlock>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource HeaderLabel}"
                            Text="Scales" />
                        <ComboBox
                            x:Name="ScalesComboBox"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,10"
                            HorizontalAlignment="Left"
                            DisplayMemberPath="Description"
                            ItemsSource="{Binding Scales}"
                            SelectedIndex="0" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource SelectedItemLabel}">
                            <TextBlock.Inlines>
                                <Run Text="Current Scale" />
                                <LineBreak />
                                <Run
                                    x:Name="SelectedScaleLabel"
                                    FontStyle="Italic"
                                    Foreground="Yellow" />
                            </TextBlock.Inlines>
                        </TextBlock>
