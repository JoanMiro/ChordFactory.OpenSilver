                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            Grid.ColumnSpan="3"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ScaleEFlatKey"
                                            Grid.Column="4"
                                            Grid.ColumnSpan="2"
                                            Background="Black"
                                            Canvas.ZIndex="10"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Black" />
                                        <Border
                                            x:Name="ScaleEKey"
                                            Grid.RowSpan="2"
                                            Grid.Column="5"
                                            Grid.ColumnSpan="2"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ScaleFKey"
                                            Grid.RowSpan="2"
                                            Grid.Column="7"
                                            Grid.ColumnSpan="2"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ScaleFSharpKey"
                                            Grid.Column="8"
                                            Grid.ColumnSpan="2"
                                            Background="Black"
                                            Canvas.ZIndex="10"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Black" />
                                        <Border
                                            x:Name="ScaleGKey"
                                            Grid.RowSpan="2"
                                            Grid.Column="9"
                                            Grid.ColumnSpan="3"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ScaleGSharpKey"
                                            Grid.Column="11"
                                            Grid.ColumnSpan="2"
                                            Background="Black"
                                            Canvas.ZIndex="10"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Black" />
                                        <Border
                                            x:Name="ScaleAKey"
                                            Grid.RowSpan="2"
                                            Grid.Column="12"
                                            Grid.ColumnSpan="3"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                        <Border
                                            x:Name="ScaleBFlatKey"
                                            Grid.Column="14"
                                            Grid.ColumnSpan="2"
                                            Background="Black"
                                            Canvas.ZIndex="10"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Black" />
                                        <Border
                                            x:Name="ScaleBKey"
                                            Grid.RowSpan="2"
                                            Grid.Column="15"
                                            Grid.ColumnSpan="2"
                                            Background="Ivory"
                                            Style="{StaticResource PianoKeyStyle}"
                                            Tag="Ivory" />
                                    </Grid.Children>
                                </Grid>
                                <Grid
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
